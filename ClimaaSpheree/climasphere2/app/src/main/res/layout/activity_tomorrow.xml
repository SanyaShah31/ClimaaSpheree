<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_sky_dash">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">

        <!-- MAIN CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ⭐ HEADER ROW WITH BACK + CENTER TITLE -->
            <LinearLayout
                android:id="@+id/headerRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_back"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tvNext7Days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5 Days"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <!-- Empty placeholder to balance center alignment -->
                <View
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>

            <!-- ⭐ MAIN CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/weather_card_bg_today"
                android:padding="22dp"
                android:elevation="5dp">

                <ImageView
                    android:id="@+id/imgWeatherIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_rainy"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTomorrowDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomorrow"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTomorrowCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rainy"
                    android:textColor="#E8EDF6"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTomorrowTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25° / 18°"
                    android:textColor="@android:color/white"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <!-- ⭐ Weather info icons -->
                <LinearLayout
                    android:id="@+id/weatherInfoRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:weightSum="3">

                    <!-- Rain -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgRainIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_rain_drop" />

                        <TextView
                            android:id="@+id/tvRainValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvRainLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rain"
                            android:textColor="#BFC5D9"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Wind -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgWindIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_wind" />

                        <TextView
                            android:id="@+id/tvWindValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 km/h"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvWindLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:textColor="#BFC5D9"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgHumidityIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_humidity" />

                        <TextView
                            android:id="@+id/tvHumidityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18%"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvHumidityLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textColor="#BFC5D9"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llForecastList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
