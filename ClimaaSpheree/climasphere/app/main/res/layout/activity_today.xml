<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_sky_dash"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/rootLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header section: Today title + back arrow -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <!-- Back arrow -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Back"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon, June 17"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Weather Card -->
        <LinearLayout
            android:id="@+id/weatherCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/weather_card_bg_today"
            android:layout_marginTop="16dp"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgWeatherIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_rainy"
                android:contentDescription="Weather Icon" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmedabad"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostly Cloudy"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25°"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvHighLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:27°   L:18°"
                android:textColor="#BFC5D9"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Weather Info Row -->
            <LinearLayout
                android:id="@+id/weatherInfoRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:weightSum="3">

                <!-- Rain -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgRainIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_rain_drop" />
                    <TextView
                        android:id="@+id/tvRainValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/tvRainLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rain"
                        android:textColor="#BFC5D9"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Wind -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgWindIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_wind" />
                    <TextView
                        android:id="@+id/tvWindValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 km/h"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/tvWindLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind"
                        android:textColor="#BFC5D9"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Humidity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgHumidityIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_humidity" />
                    <TextView
                        android:id="@+id/tvHumidityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18%"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/tvHumidityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textColor="#BFC5D9"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Section: label + link -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvTodayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#FFD23F"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tvNext7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next 5 Days >"
                android:textColor="#8F93A2"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- Section title -->
<!--        <TextView-->
<!--            android:id="@+id/todayforecast"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Today Forecast"-->
<!--            android:textColor="#FDC337"-->
<!--            android:textSize="20sp"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_marginTop="8dp" />-->

        <!-- Hourly Forecast -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 7 AM -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/hourly_card_bg_today"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvHour7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 AM"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imgHour7"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_cloudy"/>
                    <TextView
                        android:id="@+id/tvTemp7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°"
                        android:textColor="#FFD23F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- 8 AM -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/hourly_card_bg_today"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvHour8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 AM"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imgHour8"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_sun"/>
<!--                        app:tint="@android:color/holo_orange_light"/>-->

                    <TextView
                        android:id="@+id/tvTemp8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26°"
                        android:textColor="#FFD23F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- 9 AM -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/hourly_card_bg_today"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvHour9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9 AM"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imgHour9"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_cloudy"/>
                    <TextView
                        android:id="@+id/tvTemp9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27°"
                        android:textColor="#FFD23F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- 10 AM -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/hourly_card_bg_today"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvHour10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 AM"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imgHour10"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_sunny"/>
                    <TextView
                        android:id="@+id/tvTemp10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28°"
                        android:textColor="#FFD23F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- 11 AM -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/hourly_card_bg_today"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvHour11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 AM"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imgHour11"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_sunny"/>
                    <TextView
                        android:id="@+id/tvTemp11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29°"
                        android:textColor="#FFD23F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- 12 AM -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/hourly_card_bg_today"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvHour12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 AM"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imgHour12"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_sunny"/>
                    <TextView
                        android:id="@+id/tvTemp12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30°"
                        android:textColor="#FFD23F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
