<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollAlerts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBE5FF"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="12dp">

        <!-- ðŸ”™ Back Button -->
        <LinearLayout
            android:id="@+id/btnBackDashboard"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="Go back to Dashboard"
            android:layout_gravity="left">   <!-- â˜… above line Added for accessibility -->

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" /> <!-- â˜… Optional -->
        </LinearLayout>


        <!-- Title -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”” Weather Alerts"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_gravity="left"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay informed about severe weather conditions"
            android:textColor="#555555"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />

        <!-- Toggle -->
        <LinearLayout
            android:id="@+id/alertSwitchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8EDF3"
            android:padding="14dp"
            android:orientation="horizontal"
            android:layout_marginVertical="12dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable Push Alerts"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive notifications for severe weather warnings"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchAlerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/alertEmptyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_input"
            android:padding="30dp"
            android:gravity="center"
            android:elevation="1dp"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bell_notification"
                app:tint="#FDC828" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No active weather alerts"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We'll notify you when there are weather warnings in your area"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Alert List -->
        <LinearLayout
            android:id="@+id/alertListPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />


        <Button
            android:id="@+id/clearAllBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:layout_margin="12dp"
            android:background="@drawable/bg_card_dark"/>

    </LinearLayout>
</ScrollView>